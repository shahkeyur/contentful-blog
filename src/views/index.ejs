<!-- Body -->
<%- contentFor('body') %>

<section class="bg-light pt-4 pb-5">
  <div class="container">
    <h1 class="text-center mb-5">WHAT'S NEW ?</h1>
    <div class="row">
      <!-- SHOW ONLY FIRST THREE BLOGS -->
      <% latestBlogs.slice(0, 3).forEach(function(blog){ %>
      <div class="col-md-4">
        <div class="card">
          <img
            class="card-img-top"
            src="<%= blog.fields.header.fields.file.url %>"
            alt="<%= blog.fields.title %>"
            style="height: 220px; width: 350px"
          />
          <div class="card-body">
            <h3><%= blog.fields.title %></h3>
            <p><%= blog.fields.description %></p>
            <a href="/blog/<%= blog.sys.id %>" class="btn btn-primary"
              >Read</a
            >
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>

<%- include("partials/options") %>
